@{
    List<Object> menuItems = new List<Object>();

    menuItems.Add(new { text = "Category", url = "/Category",
            items = new List<object>()
        {
            new { text = "Open" },
            new { text = "Save" },
            new { text = "Exit" }
        }
    });
    menuItems.Add(new { text = "Transactions", url = "/Transaction" });
}

<ejs-sidebar id="sidebar" width="290px">
    <e-content-template>
        <ejs-menu id="menu" items="menuItems"
        orientation="Vertical"
        hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>
